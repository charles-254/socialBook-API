generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
 id String @id @default(uuid()) @map("user_id")
 firstName String @map("first_name")
 lastName String @map("last_name")
 emailAddress String @unique @map("email_address")
 username String @unique
 isDeleted Boolean @default(false) @map("is_deleted")

 posts Posts[]
 userComments Comments[] @relation("UserComments")

 @@map("users")
}

model Posts {
 id String @default(uuid()) @id @map("post_id")
 title String @map("post_title")
 content String @map("post_content")
 createdAt DateTime @default(now()) @map("created_at")
 lastUpdated DateTime @updatedAt @map("last_updated")
 isDeleted Boolean @default(false) @map("is_deleted")

 user_id String
 user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)

 comments Comments[]

 @@map("posts")
}

model Comments {
  id Int @id  @default(autoincrement()) @map("comment_id")
  content String @map("comment_content")
  createdAt DateTime @default(now()) @map("created_at")
  lastUpdated DateTime @updatedAt @map("last_updated")
  isDeleted Boolean @default(false) @map("is_deleted")

  authorId String @map("author_id")
  postId String @map("post_id")

  author Users @relation("UserComments", fields: [authorId], references: [id], onDelete: Cascade)
  posts Posts @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@map("comments")
}
